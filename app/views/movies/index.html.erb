
<% if params[:top_movies].present?%>
  <% @facade.top20.each do |movie| %>
    <section class="top movie">
    Movie: <%= movie.title %>     Vote Average - <%= movie.vote_average %>
    </section>
  <% end %>
<% end %>

<% if params[:search].present? %>
  <% @facade.movies.each do |movie| %>
    <section class="movie search">
    Movie: <%= movie.title %>     Vote Average - <%= movie.vote_average %>
    </section>
  <% end %>
<% end %>

<%= button_to 'Discover Page', discover_user_path(@user.id), method: :get %>