
<% if params[:top_movies].present? || params[:search].present? %>
  <% @movies.each do |movie| %>
    <section class="movie">
    Movie: <%= link_to movie[:title], "/users/#{@user.id}/movies/#{movie[:id]}" %>     Vote Average - <%= movie[:vote_average] %>
    </section>
  <% end %>
<% end %>

<%= button_to 'Discover Page', discover_user_path(@user.id), method: :get %>